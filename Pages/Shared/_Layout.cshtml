@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>P2P Ride Share</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">

    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZ8jy-y4qWUJZL9m2ydWYlE2R5P5ZTiRE&callback=initMap&libraries=places&v=weekly"
            defer></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZ8jy-y4qWUJZL9m2ydWYlE2R5P5ZTiRE&callback=initMap2&libraries=places&v=weekly"
            defer></script>

    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
   

    <link rel="stylesheet" type="text/css" href="~/css/mapforlocations.css" />
    <script type="module" src="~/js/mapforlocations.js"></script>

    <link rel="stylesheet" type="text/css" href="~/css/requestmaps.css" />
    <script type="module" src="~/js/requestmaps.js"></script>

    <script src="~/dist/js/adminlte.min.js"></script>

    <link rel="stylesheet" type="text/css" href="~/css/usercard.css" />


</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                
                
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                

                     
                        
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/dist/img/AdminLTELogo.png" alt="P2P Ride Share Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">P2P Ride Share</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/mugshots/@httpContextAccessor.HttpContext.Session.GetString("UserPICTURE")" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@httpContextAccessor.HttpContext.Session.GetString("UserNAME")  </a>
                    </div>
                    
                </div>



                

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="/Dashboard" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Ride Sharing
                                    
                                </p>
                            </a>
                             
                        </li>

                        
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    My Rides

                                </p>
                            </a>

                        <li class="nav-item">
                            <a href="RequestedRides" class="nav-link">

                                <i class="nav-icon fas fa-arrow-right-long"></i>
                                <p>
                                    Requested Rides

                                </p>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a href="/RideOffers" class="nav-link">
                                
                                <i class="nav-icon fas fa-arrow-right-long"></i>
                                <p>
                                    Available Drivers

                                </p>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a href="/DriverBookings" class="nav-link">

                                <i class="nav-icon fas fa-arrow-right-long"></i>
                                <p>
                                    Accepted Drivers

                                </p>
                            </a>

                        </li>

                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    My Passengers

                                </p>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a href="/SubmittedOffers" class="nav-link">

                                <i class="nav-icon fas fa-arrow-right-long"></i>
                                <p>
                                    Offered Rides

                                </p>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a href="/RideRequests" class="nav-link">

                                <i class="nav-icon fas fa-arrow-right-long"></i>
                                <p>
                                    Available Passengers

                                </p>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a href="/PassengerBookings" class="nav-link">

                                <i class="nav-icon fas fa-arrow-right-long"></i>
                                <p>
                                    Accepted Passengers

                                </p>
                            </a>

                        </li>




                        @if (@httpContextAccessor.HttpContext.Session.GetString("UserPERMISSION") == "Admin")
                        {
                            <li class="nav-item">
                                <a href="/VerifySignUp" class="nav-link">
                                    <i class="nav-icon fas fa-fingerprint"></i>
                                    <p>
                                        User Verification

                                    </p>
                                </a>

                            </li>
                        }

                        @if (@httpContextAccessor.HttpContext.Session.GetString("UserPERMISSION") == "General User")
                        {
                            <li class="nav-item">
                                <a href="/MyAccount" class="nav-link">
                                    <i class="nav-icon fas fa-fingerprint"></i>
                                    <p>
                                        My Account

                                    </p>
                                </a>

                            </li>
                        }
                       

                        

                        <li class="nav-item">
                            <a href="/" class="nav-link">
                                <i class="nav-icon fas fa-door-open"></i>
                                <p>
                                    Sign Out

                                </p>
                            </a>

                        </li>
                    </ul>
                    
                        
                        
                                
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
    
    <!-- Main content -->
   <div class="row">
    <div class="container-fluid">
    @RenderBody()

        </div>
        </div>

    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            <b>Version</b> 1.0.0
        </div>
        <strong>Copyright &copy; 2023 <a href="https://zimbotech.co.zw">P2P Ride Share</a>.</strong> All rights reserved.
    </footer>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
   

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>